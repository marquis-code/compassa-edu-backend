{
	"name": "nest-ecommerce-api",
	"version": "0.0.1",
	"description": "A backend REST API built with NestJS for an ecommerce website",
	"author": "Dipshan Adhikari",
	"private": true,
	"license": "GPL-3.0",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "node --max_old_space_size=4096 dist/main",
		"start:prod": "node --max_old_space_size=4096 dist/main",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.731.1",
		"@nestjs/cache-manager": "^2.2.2",
		"@nestjs/common": "^11.0.0",
		"@nestjs/config": "^3.2.2",
		"@nestjs/core": "^11.0.0",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/mongoose": "^11.0.0",
		"@nestjs/platform-express": "^10.4.15",
		"@nestjs/platform-socket.io": "^11.0.1",
		"@nestjs/schedule": "^4.1.2",
		"@nestjs/serve-static": "^4.0.2",
		"@nestjs/swagger": "^7.3.1",
		"@nestjs/throttler": "^5.0.0",
		"@nestjs/websockets": "^11.0.1",
		"@sendgrid/mail": "^8.1.3",
		"axios": "^1.7.2",
		"bcryptjs": "^2.4.3",
		"buffer-to-stream": "^1.0.0",
		"cache-manager": "^5.7.6",
		"cache-manager-redis-store": "2.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cloudinary": "^2.2.0",
		"firebase-admin": "^12.2.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.9.5",
		"ms": "^2.1.3",
		"multer": "^1.4.5-lts.1",
		"multer-s3": "^3.0.1",
		"nodemailer": "^6.9.13",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"socket.io": "^4.7.5",
		"streamifier": "^0.1.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.1.17",
		"@nestjs/schematics": "^10.0.2",
		"@nestjs/testing": "^10.2.5",
		"@types/bcryptjs": "^2.4.4",
		"@types/express": "^4.17.17",
		"@types/jest": "29.5.5",
		"@types/jsonwebtoken": "^9.0.8",
		"@types/multer": "^1.4.11",
		"@types/node": "20.6.3",
		"@types/nodemailer": "^6.4.10",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^6.7.2",
		"@typescript-eslint/parser": "^6.7.2",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "29.7.0",
		"nodemon": "^3.1.9",
		"prettier": "^3.0.3",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "29.1.1",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "4.2.0",
		"typescript": "^5.2.2",
		"webpack": "^5.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
